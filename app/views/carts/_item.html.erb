<%= tag.tr do %>
  <%= tag.td image_tag product.image.tiny.url %>
  
  <%= tag.td do %>
    <%= tag.h4 product.name + tag.br %>
    <%= tag.p product.description.truncate(100, separator: /\s/) %>
  <% end %>

  <%= tag.td humanized_money_with_symbol product.price %>

  <%= tag.td nil, class:'btn-group' do %>
    <%= button_to "-", remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-danger' %>
    <%= tag.span quantity, class: 'px-2' %>
    <%= button_to "+", add_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-success' %>
  <% end %>

  <%= tag.td humanized_money_with_symbol product.price * quantity %>
<% end %>
