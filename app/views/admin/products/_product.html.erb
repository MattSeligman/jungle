<%= tag.tr do%>

  <%= tag.td image_tag product.image.tiny.url, title: product.name, alt: product.name, loading:"lazy", class:"rounded"  %> 

  <%= tag.td do%>
    <%= tag.h4 product.name %>
    <%= tag.p product.description %>
  <% end %>

  <%= tag.td product.category.name %>
  <%= tag.td humanized_money_with_symbol product.price %>
  <%= tag.td product.quantity %>
  <%= tag.td link_to fa_icon('trash'), [:admin, product], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>

<% end %>